# ============================================
# Swing Trading Intelligence Platform
# Environment Configuration
# ============================================

# App
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=swing_trading
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Yahoo Finance
YF_RATE_LIMIT_PER_SECOND=2

# ML Configuration
ML_MODEL_DIR=./saved_models
ML_RETRAIN_INTERVAL_HOURS=24
ML_LOOKBACK_DAYS=504
ML_FORWARD_DAYS=5
ML_PROBABILITY_THRESHOLD=0.65
ML_XGBOOST_WEIGHT=0.6
ML_LSTM_WEIGHT=0.4

# Risk Engine
RISK_PER_TRADE_PCT=1.0
RISK_REWARD_MIN=1.5
MAX_PORTFOLIO_EXPOSURE_PCT=80.0
MAX_CORRELATED_POSITIONS=3
MAX_DRAWDOWN_PCT=15.0
CORRELATION_THRESHOLD=0.7

# Backtesting
BACKTEST_SLIPPAGE_BPS=10
BACKTEST_COMMISSION_BPS=10
BACKTEST_INITIAL_CAPITAL=1000000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
